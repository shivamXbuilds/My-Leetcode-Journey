#include <iostream>
#include <vector>
#include <queue>
using namespace std;

bool detect(vector<int> &visited, vector<int>adj[], int source)
{
    visited[source] = 1;
    queue<pair<int,int>> q;
    q.push({source, -1});
    while(!q.empty())
    {
        int node = q.front().first;
        int parentnode = q.front().second;
        q.pop();
        
        for(auto it : adj[node])
        {
            if(!visited[it])
            {
                visited[it] = 1;
                q.push({it, node});
            }
            else if(parentnode!=it)
            {
                return true;
            }
        }
    }
    return false;
}


bool isCycle(int vertices, vector<int>adj[])
{
    vector<int>visited(vertices, 0);
    for(int i=0;i<vertices;i++)
    {
        if(!visited[i])
        {
            if(detect(visited, adj, i)) return true;
            
        }
    }
    return false;
}

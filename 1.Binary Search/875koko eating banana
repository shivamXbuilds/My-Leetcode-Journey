class Solution {
public:

    long long total(vector<int>& piles, int speed)
    {
        long long total = 0;

        for(int banana: piles)
        {
            total = total + ((long long)banana + speed - 1)/speed;
        }

        return total;
    }


    int minEatingSpeed(vector<int>& piles, int h) {
        int maxpile = *max_element(piles.begin(),piles.end());

        int low = 1, high = maxpile;
        int ans = maxpile;
        while(low<=high)
        {
            int mid = low + (high - low)/2;
            long long time = total(piles, mid);

            if(time<=h)
            {
                ans = mid;
                high = mid - 1;
            }
            else
            {
                low = mid + 1;
            }
        }

        return ans;
    }
};
